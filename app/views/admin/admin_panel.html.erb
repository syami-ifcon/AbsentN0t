<div class="container mb-5">

	<div class="row mb-3">
		<h1  style="margin: auto;">Hello <%= current_user.name %></h1>
	</div>

	<div class="row">
		<table class="table table-striped table-dark text-center">
			<tr>
				<th>Lecture</th>
				<th>Subject name</th>
				<th>Time of Class</th>
				<th>Student<br>[ present / total ]</th>
			</tr>
			<tr>
				<%= %>
			</tr>
		</table>
	</div>

	<div class="container">
		<div class="col-md-4" style="display: inline-block;margin: 10px 0px">
			<%= form_with(url: '/add_student') do |s| %>
				<div>
					<label>Student</label>
					<input class="form-control" type="email" name="email" placeholder="email">
				</div>
				<button class="btn " type="submit" style="margin-top: 15px">Create</button>
			<% end %>
		</div>

		<div class="col-md-4" style="display: inline-block;margin: 10px 0px">
			<%= form_with(url: '/add_teacher') do |s| %>
				<div>
					<label>Teacher</label>
					<input class="form-control" style="margin-bottom: 5px" type="text" name="username" placeholder="name">
					<input class="form-control" style="margin-bottom: 5px" type="email" name="email" placeholder="email">
					<input class="form-control" style="margin-bottom: 5px" type="text" name="password" placeholder="password">
				</div>
				<button class="btn " type="submit" style="margin-top: 15px">Create</button>
			<% end %>
		</div>

		<div class="col-md-4" style="display: inline-block;margin: 10px 0px">
			<%= form_with(url: '/add_subject') do |s| %>
				<label>subject</label>
				<div>
				<input class="form-control  mb-2" type="text" name="subject_name" placeholder="subject_name">
				<%= s.select("user_id", User.where("roles = 0").collect {|p| [ p.name, p.id ] }, {include_blank: 'Select Teacher'},class: "form-control") %>
				</div>
				<button class="btn " type="submit" style="margin-top: 15px">Create</button>
			<% end %>
		</div>
	</div>
</div>